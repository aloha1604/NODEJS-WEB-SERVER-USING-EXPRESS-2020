<!DOCTYPE html>
<html>
<head>
	 <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 <base href="http://localhost:8080/">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/js/all.min.js">
	
	 <title>Hello, world!</title>
</head>
<body>
	<%- include ('../layout/menu.ejs') %>

	<!-- dang ky -->
	<div class="container mt-5">
	
		<% var errors;if(errors){ %>
			<% errors.forEach(function(err){ %>
				<div class="alert alert-danger" role="alert">
					<%- err%>
				  </div>
			<% }); %>
		<% } %>
	
			<label> <h3>Trang dang ky</h3></label>
			<form class="col-md-6"  action="/users/createUser" method="POST">
			  <div class="form-group">
			    <label for="examleName">Name</label>
			    <input type="text" class="form-control" id="examleName" placeholder="Name" name="name">
			  </div>
			  <div class="form-group">
			    <label for="examlePhone">Phone</label>
			    <input type="text" class="form-control" id="examlePhone" placeholder="Phone" name="phone">
			  </div>
			  <div class="form-group">
			    <label for="exampleInputEmail1">Email address</label>
			    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
			    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
			  </div>
			   <div class="form-group">
			    <label for="exampleInputPassword1">Password</label>
			    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
			  </div>
			  <button type="submit" name="submit" class="btn btn-primary">Submit</button>
			</form>
	</div>

	<!-- end dang ky -->

	

	 <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
